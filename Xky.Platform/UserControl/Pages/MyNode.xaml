                                <ColumnDefinition></ColumnDefinition>
                               
                            </Grid.ColumnDefinitions>
                           
                            <Button Height="32" VerticalAlignment="Center" Grid.Column="1"    Content="编辑"  BorderThickness="0" Background="#3e454c" Foreground="#fff"/>
                            <Border Grid.Column="2" CornerRadius="0,0,4,0" Background="#3e454c" >
                            <Button Height="32" VerticalAlignment="Center"   Content="删除"  BorderThickness="0" Background="Transparent" Foreground="#d52d2f"/>
