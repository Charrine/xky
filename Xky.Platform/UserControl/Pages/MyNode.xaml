<UserControl x:Class="Xky.Platform.UserControl.Pages.MyNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xky.Platform.UserControl.Pages"
             xmlns:UserControl="clr-namespace:Xky.Platform.UserControl"
             mc:Ignorable="d" 
          
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource BackgroundColor4}">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
      
            <Label Grid.Row="0" FontSize="30" Foreground="White" Margin="20,40,0,20">节点管理</Label>


            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.CanContentScroll="True" VirtualizingStackPanel.IsVirtualizing="True">

                <ItemsControl x:Name="NodeListBox" Margin="0,0,0,1" Grid.Row="1" 
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.ScrollUnit="Item"
                    
                     ScrollViewer.ScrollChanged="NodeListBox_ScrollChanged">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="10">
                                <Border Background="#343c43" BorderThickness="0"  CornerRadius="5"></Border>
                                <Grid Margin="10,5,10,0" VerticalAlignment="Top" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="20"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0">
                                        <Ellipse Fill="Green" Width="10" Height="10"></Ellipse>
                                        <Label  Foreground="#fff" FontSize="15">测试节点服务器</Label>

                                    </StackPanel>
                                    <Button Grid.Column="1" BorderThickness="0" Background="Transparent" Foreground="#fff" HorizontalAlignment="Right" VerticalAlignment="Center">⋮
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="文件">
                                                    <MenuItem Header="打开" />
                                                    <MenuItem.Icon>
                                                        <ImageBrush ImageSource="/Xky.Platform;component/Resources/Icon/ControlBox/dark/max_btn1.png" />
                                                    </MenuItem.Icon>

                                                </MenuItem>
                                                <Separator />
                                                <MenuItem Header="重启当前设备">
                                                    <MenuItem.Icon>
                                                        <ImageBrush ImageSource="/Xky.Platform;component/Resources/Icon/ControlBox/dark/min_btn1.png" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator />
                                                <MenuItem Header="删除设备">
                                                    <MenuItem.Icon>
                                                        <ImageBrush ImageSource="/Xky.Platform;component/Resources/Icon/ControlBox/dark/close_btn1.png" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator />
                                                <MenuItem Header="升级系统" />
                                                <Separator />

                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>

                                </Grid>

                                <StackPanel Width="270"  HorizontalAlignment="Left" Orientation="Vertical" Margin="0,10,0,0">

                                    <Border Grid.Column="0" Margin="10,35,10,15" Background="#404a52" Padding="5" CornerRadius="5">
                                        <StackPanel>

                                            <Label Foreground="#fff"  Padding="0,5,5,5">序列号：656DFBFFAABC0D55AE7C112BB90678DA</Label>
                                            <Label Foreground="#fff"  Padding="0,5,5,5">IP地址：192.168.1.144</Label>
                                            <Label Foreground="#fff"  Padding="0,5,5,5">在线设备：10台</Label>
                                            <Label Foreground="#fff"  Padding="0,5,5,5">上线时间：3天前</Label>
                                        </StackPanel>
                                    </Border>
