<UserControl x:Class="MyDemo.UserControl.PreviewSliderDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Xky.UI.Controls;assembly=Xky.UI"
             Background="{DynamicResource RegionBrush}">
    <controls:TransitioningContentControl>
        <controls:PreviewSlider Name="PreviewSlider" Width="800" Value="500" Maximum="1000" VerticalAlignment="Center" Margin="32">
            <controls:PreviewSlider.PreviewContent>
                <Label Style="{StaticResource LabelPrimary}" Content="{Binding PreviewPosition,ElementName=PreviewSlider}" ContentStringFormat="{}{0:#0.0}"/>
            </controls:PreviewSlider.PreviewContent>
        </controls:PreviewSlider>
    </controls:TransitioningContentControl>
</UserControl>
