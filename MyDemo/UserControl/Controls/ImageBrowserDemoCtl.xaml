<UserControl x:Class="MyDemo.UserControl.Controls.ImageBrowserDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource RegionBrush}"
             xmlns:langs="clr-namespace:MyDemo.Properties.Langs"
             DataContext="{Binding ImageBrowserDemo,Source={StaticResource Locator}}"
             xmlns:controls="clr-namespace:Xky.UI.Controls;assembly=Xky.UI"
             xmlns:other="clr-namespace:Xky.UI.Controls.Other;assembly=Xky.UI"
             xmlns:image="clr-namespace:Xky.UI.Controls.Image;assembly=Xky.UI">
    <other:TransitioningContentControl>
        <StackPanel Margin="32">
            <image:ImageViewer Background="{DynamicResource BackgroundBrush}" Width="600" Height="330" ImageSource="/MyDemo;component/Resources/Img/1.jpg"/>
            <Button Margin="0,32,0,0" Command="{Binding OpenImgCmd}" Content="{x:Static langs:Lang.OpenImageBrowser}" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Center"/>
        </StackPanel>
    </other:TransitioningContentControl>
</UserControl>
