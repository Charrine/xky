<UserControl x:Class="MyDemo.UserControl.GifImageDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Xky.UI.Controls;assembly=Xky.UI"
             Background="{DynamicResource RegionBrush}">
    <controls:TransitioningContentControl>
        <controls:GifImage x:Name="GifImageMain" Margin="32" Width="400" Height="300">
            <controls:GifImage.Source>
                <BitmapImage UriSource="/MyDemo;component/Resources/Img/car_chase.gif"/>
            </controls:GifImage.Source>
        </controls:GifImage>
    </controls:TransitioningContentControl>
</UserControl>
