<UserControl x:Class="MyDemo.UserControl.Controls.GifImageDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Xky.UI.Controls;assembly=Xky.UI"
             xmlns:other="clr-namespace:Xky.UI.Controls.Other;assembly=Xky.UI"
             xmlns:image="clr-namespace:Xky.UI.Controls.Image;assembly=Xky.UI"
             Background="{DynamicResource RegionBrush}">
    <other:TransitioningContentControl>
        <image:GifImage x:Name="GifImageMain" Margin="32" Width="400" Height="300">
            <image:GifImage.Source>
                <BitmapImage UriSource="/MyDemo;component/Resources/Img/car_chase.gif"/>
            </image:GifImage.Source>
        </image:GifImage>
    </other:TransitioningContentControl>
</UserControl>
