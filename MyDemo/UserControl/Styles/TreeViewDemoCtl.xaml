<UserControl x:Class="MyDemo.UserControl.Styles.TreeViewDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Xky.UI.Controls;assembly=Xky.UI"
             xmlns:other="clr-namespace:Xky.UI.Controls.Other;assembly=Xky.UI"
             Background="{DynamicResource RegionBrush}">
    <other:TransitioningContentControl>
          <TreeView Width="200" Margin="32" ItemsSource="{Binding DataList}">
              <TreeView.ItemTemplate>
                  <HierarchicalDataTemplate ItemsSource="{Binding DataList}">
                      <TextBlock Text="{Binding Name}"/>
                  </HierarchicalDataTemplate>
              </TreeView.ItemTemplate>
          </TreeView>
    </other:TransitioningContentControl>
</UserControl>
