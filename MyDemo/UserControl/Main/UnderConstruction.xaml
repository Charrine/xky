<UserControl x:Class="MyDemo.UserControl.Main.UnderConstruction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Xky.UI.Controls;assembly=Xky.UI"
             xmlns:langs="clr-namespace:MyDemo.Properties.Langs"
             xmlns:other="clr-namespace:Xky.UI.Controls.Other;assembly=Xky.UI"
             xmlns:image="clr-namespace:Xky.UI.Controls.Image;assembly=Xky.UI"
             Background="{DynamicResource RegionBrush}">
    <other:TransitioningContentControl>
       <StackPanel Margin="32">
            <image:GifImage Width="400" Height="300">
                <image:GifImage.Source>
                    <BitmapImage UriSource="/MyDemo;component/Resources/Img/under_construction.gif"/>
                </image:GifImage.Source>
            </image:GifImage>
           <TextBlock Margin="0,16,0,0" HorizontalAlignment="Center" Text="{x:Static langs:Lang.ComingSoon}" Style="{StaticResource TextBlockLargeBold}"/>
        </StackPanel>
    </other:TransitioningContentControl>
</UserControl>
