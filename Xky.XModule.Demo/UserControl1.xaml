<UserControl x:Class="Xky.XModule.Demo.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Xky.XModule.Demo"
             xmlns:UserControl="clr-namespace:Xky.Core.UserControl;assembly=Xky.Core"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" VerticalAlignment="Center">
    <Border Background="#1d232a" Padding="30" BorderBrush="Black" BorderThickness="1">
        <StackPanel  Orientation="Horizontal" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center">
           
            <UserControl:MyTextBox x:Name="textvalue" WaterText="用户名" Width="200" Height="32"></UserControl:MyTextBox>
            <UserControl:MyButton Content="关闭" Margin="5" Height="32" Width="80"  Click="Button_Click" Background="#666" Foreground="#fff"  VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>