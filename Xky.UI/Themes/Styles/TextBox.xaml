<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Xky.UI.Controls"
                    xmlns:input="clr-namespace:Xky.UI.Controls.Input">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Base/TextBoxBaseStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource WatermarkTextBoxBaseStyle}" TargetType="input:WatermarkTextBox"/>

    <Style BasedOn="{StaticResource TextBoxBaseStyle}" TargetType="TextBox"/>

    <Style x:Key="TextBoxExtend" BasedOn="{StaticResource TextBoxExtendBaseStyle}" TargetType="TextBox"/>

    <Style BasedOn="{StaticResource TextBoxPlusBaseStyle}" TargetType="input:TextBox"/>

</ResourceDictionary>